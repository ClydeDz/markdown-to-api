{
    "manifestVersion": 1,
    "id": "markdown-to-api",
    "name": "Markdown to API",
    "version": "1.0.1",
    "publisher": "clydedsouza",
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Generate JSON files from Markdown files which can then be consumed by your front-end app. Basically, a static API generator.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "files": [
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "src/install",
            "packagePath": "install"
          },
          {
            "path": "src/process",
            "packagePath": "process"
          },
          {
            "path": "src/node_modules",
            "packagePath": "install/node_modules"
          },
          {
            "path": "src/node_modules",
            "packagePath": "process/node_modules"
          }
    ],
    "tags": [
        "Markdown",
        "JSON",
        "markdown2json",
        "Markdown to JSON",
        "API generator",
        "static API generator",
        "Markdown API",
        "FrontMatter",
        "YAML",
        "yml",
        "md",
        "Azure DevOps",
        "Azure DevOps extension",
        "task",
        "build",
        "release",
        "pipeline"
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/ClydeDz/markdown-to-api"
    },
    "links": {
        "home": {
            "uri": "https://github.com/ClydeDz/markdown-to-api"
        },
        "learn": {
            "uri": "https://github.com/ClydeDz/markdown-to-api#readme"
        },
        "support": {
            "uri": "https://github.com/ClydeDz/markdown-to-api#support"
        },
        "repository": {
            "uri": "https://github.com/ClydeDz/markdown-to-api"
        },
        "issues": {
            "uri": "https://github.com/ClydeDz/markdown-to-api/issues"
        },
        "privacypolicy": {
            "uri": "https://github.com/ClydeDz/visualstudio-marketplace/blob/main/PRIVACY.md"
        }
    },
    "contributions": [
        {
            "id": "install-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
              "ms.vss-distributed-task.tasks"
            ],
            "properties": {
              "name": "install"
            }
          },
          {
            "id": "process-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
              "ms.vss-distributed-task.tasks"
            ],
            "properties": {
              "name": "process"
            }
          }
    ]
}