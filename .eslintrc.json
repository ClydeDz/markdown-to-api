{
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "keyword-spacing": ["error", { "before": true }],
        "space-before-blocks": ["error"]
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "ignorePatterns": ["testing", "node_modules/"]
}